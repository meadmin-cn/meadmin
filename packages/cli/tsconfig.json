{
  "extends": "../tsconfig.build.json",
  "compilerOptions": {
    "rootDir":"./src",
    "outDir": "./dist",  
    "tsBuildInfoFile":"./dist/tsconfig.tsbuildinfo",
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}