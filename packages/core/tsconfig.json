{
  "compileOnSave": true,
  "compilerOptions": {
    "composite": true,
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap":false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "noImplicitReturns": false,
    "pretty": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "typeRoots": [ "./types", "./node_modules/@types"],
    "paths": {
      "@meadmin/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "dist",
    "node_modules",
    "test"
  ]
}
